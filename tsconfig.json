{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"]
  }
}
